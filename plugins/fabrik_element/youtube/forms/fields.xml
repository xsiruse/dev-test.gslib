<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields"
		          name="plg-element-youtube">

			<field type="helplink"
			       url="PLG_ELEMENT_YOUTUBE_HELP_SERVER"/>

			<field name="width"
			       type="text"
			       class="input-mini"
			       default="60"
			       label="Width"
			       size="3"/>

			<field name="default"
			       type="text"
			       default=""
			       label="Default"
			       size="50"/>

			<field default="1"
			       class="btn-group"
			       description=""
			       label="INCLUDERELATEDVIDEOS"
			       name="include_related"
			       type="radio">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field default="1"
			       class="btn-group"
			       description="PLG_ELEMENT_YOUTUBE_AUTOPLAY_DESC"
			       label="PLG_ELEMENT_YOUTUBE_AUTOPLAY_LABEL"
			       name="youtube_autoplay"
			       type="radio">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field default="1"
			       class="btn-group"
			       description="PLG_ELEMENT_YOUTUBE_FULLSCREEN_DESC"
			       label="PLG_ELEMENT_YOUTUBE_FULLSCREEN_DESC"
			       name="youtube_fullscreen"
			       type="radio">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="enable_delayed_cookies"
			       type="radio"
			       default="0"
			       class="btn-group"
			       description="ENABLEDELAYEDCOOKIESDESC"
			       label="ENABLEDELAYEDCOOKIES">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field default="medium"
			       description=""
			       label="PLAYERSIZE"
			       name="player_size"
			       type="list">
				<option value="small">340x285</option>
				<option value="medium">445x364</option>
				<option value="normal">500x405</option>
				<option value="big">660x525</option>
			</field>

			<field class="input-mini"
			       description="ORWIDTHPLAYERDESC"
			       label="ORWIDTHPLAYER"
			       name="or_width_player"
			       size="3"
			       type="text"/>

			<field class="input-mini"
			       description="ORHEIGHTPLAYERDESC"
			       label="ORHEIGHTPLAYER"
			       name="or_height_player"
			       size="3"
			       type="text"/>

			<field default="0"
			       description="DISPLAYINTABLEDESC"
			       label="DISPLAYINTABLE"
			       name="display_in_table"
			       type="list">
				<option value="0">Mini</option>
				<option value="1">Display link</option>
				<option value="2">Normal</option>
			</field>

			<field default="0"
			       description="DISPLAYLINKDESC"
			       label="DISPLAYLINK"
			       name="display_link"
			       type="list">
				<option value="0">Raw txt link</option>
				<option value="1">Linked txt link</option>
				<option value="2">'Watch Video' link</option>
			</field>

			<field default="Watch Video"
			       description=""
			       label="TEXTLINK"
			       name="text_link"
			       size="12"
			       type="text"/>

			<field default="0"
			       description="TARGETLINKDESC"
			       label="TARGETLINK"
			       name="target_link"
			       type="list">
				<option value="0">Current window</option>
				<option value="1">New window</option>
				<option value="2">Lightbox</option>
			</field>
		</fieldset>
	</fields>
</form>
