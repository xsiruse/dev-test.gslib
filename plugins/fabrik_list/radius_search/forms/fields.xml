<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset label="COM_FABRIK_OPTIONS" name="plg-list-radius_search">

			<field type="helplink"
				url="PLG_LIST_RADIUS_SEARCH_HELP_SERVER" />


			<field name="radius_use_popup"
				   type="radio"
				   class="btn-group"
				   default="1"
				   repeat="true"
				   description="PLG_LIST_RADIUS_SEARCH_USE_POPUP_DESC"
				   label="PLG_LIST_RADIUS_SEARCH_USE_POPUP_LABEL" >
				<option value="0">PLG_LIST_RADIUS_SEARCH_USE_POPUP_NO</option>
				<option value="1">PLG_LIST_RADIUS_SEARCH_USE_POPUP_YES</option>
			</field>

			<field name="radius_mapelement"
				type="listfields"
				description="PLG_LIST_RADIUS_SEARCH_MAP_ELEMENT_DESC"
				filter="googlemap"
				label="PLG_LIST_RADIUS_SEARCH_MAP_ELEMENT_LABEL"
				repeat="true" />
				
			<field name="radius_unit"
				type="list"
				class="input-small"				
				default="km"
				label="PLG_LIST_RADIUS_SEARCH_RADIUS_UNIT_LABEL"
				repeat="true">
					<option value="km">Kms</option>
					<option value="miles">Miles</option>
			</field>
			
			<field name="radius_max"
				type="text"
				class="input-mini"
				default="100"
				label="PLG_LIST_RADIUS_SEARCH_MAX_LABEL"
				repeat="true"
				size="4" />
				
			<field name="radius_label"
				type="text"
				default="Radius search"
				label="PLG_LIST_RADIUS_SEARCH_SEARCH_LABEL_LABEL"
				repeat="true"/>
				
			<field name="radius_placeelement"
				type="listfields"
				description="PLG_LIST_RADIUS_SEARCH_PLACE_ELEMENT_DESC"
				label="PLG_LIST_RADIUS_SEARCH_PLACE_ELEMENT_LABEL"
				repeat="true"/>
				
			<field name="geocode_default"
				type="field"
				default=""
				size="40"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_GEOCODE_DEFAULT_DESC"
				label="PLG_LIST_RADIUS_SEARCH_GEOCODE_DEFAULT_LABEL" />

			<field name="prefilter_distance"
				type="field"
				default=""
				size="7"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_START_FILTER_DISTANCE_DESC"
				label="PLG_LIST_RADIUS_SEARCH_START_FILTER_DISTANCE_LABEL" />
			
			<field name="start_active"
				type="radio"
				class="btn-group"
				default="0"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_START_ACTIVE_DESC"
				label="PLG_LIST_RADIUS_SEARCH_START_ACTIVE_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>

			<field name="window_offset_y"
				type="text"
				class="input-mini"
				default=""
				label="PLG_LIST_RADIUS_SEARCH_OFFSET_Y_LABEL"
				description="PLG_LIST_RADIUS_SEARCH_OFFSET_Y_DESC"
				repeat="true"
				size="4" />			
		</fieldset>
		
		<fieldset name="plg-list-radius_search-opts" label="PLG_LIST_RADIUS_SEARCH_OPTS">
			<field name="default_search"
				type="list"
				default="mylocation"
				label="PLG_LIST_RADIUS_SEARCH_DEFAULT_SEARCH_LABEL"
				description="PLG_LIST_RADIUS_SEARCH_DEFAULT_SEARCH_DESC"
				repeat="true"
			>
				<option value="mylocation">PLG_LIST_RADIUS_SEARCH_DEFAULT_SEARCH_MYLOCATION</option>
				<option value="place">PLG_LIST_RADIUS_SEARCH_DEFAULT_SEARCH_PLACE</option>
				<option value="latlon">PLG_LIST_RADIUS_SEARCH_DEFAULT_SEARCH_LATLON</option>
				<option value="geocode">PLG_LIST_RADIUS_SEARCH_DEFAULT_SEARCH_GEOCODE</option>
			</field>
						
			<field name="myloc"
				type="radio"
				class="btn-group"
				default="1"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_MYLOC_DESC"
				label="PLG_LIST_RADIUS_SEARCH_MYLOC_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field name="place"
				type="radio"
				class="btn-group"
				default="0"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_PLACE_DESC"
				label="PLG_LIST_RADIUS_SEARCH_PLACE_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field name="coords"
				type="radio"
				class="btn-group"
				default="1"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_COORDS_DESC"
				label="PLG_LIST_RADIUS_SEARCH_COORDS_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field name="geocode"
				type="radio"
				class="btn-group"
				default="1"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_GEOCODE_DESC"
				label="PLG_LIST_RADIUS_SEARCH_GEOCODE_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field name="geocode_as_type"
				type="radio"
				class="btn-group"
				default="0"
				repeat="true"
				description="PLG_LIST_RADIUS_SEARCH_GEOCODE_AS_TYPE_DESC"
				label="PLG_LIST_RADIUS_SEARCH_GEOCODE_AS_TYPE_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
						
		</fieldset>

		<fieldset name="plg-list-radius_search-simple-opts" label="PLG_LIST_RADIUS_SEARCH_SIMPLE_OPTS">
			<field name="radius_simple_distances"
				   type="field"
				   default="1,10,100"
				   size="20"
				   repeat="true"
				   description="PLG_LIST_RADIUS_SEARCH_SIMPLE_DISTANCES_DESC"
				   label="PLG_LIST_RADIUS_SEARCH_SIMPLE_DISTANCES_LABEL" />
		</fieldset>
		
	</fields>
</form>
