<?php
JHTML::_('behavior.modal');  
$user =& JFactory::getUser();
$username = $user->get( 'username' );
if ($user->get('id')!=0) {
echo '<a class="modal btn" href="index.php?option=com_users&view=login&templateStyle=29" rel="{handler:'iframe',size:{x:window.getSize().scrollSize.x-80, y: window.getSize().size.y-80}, onShow:$('sbox-window').setStyles({'padding': 0})}">' . $username . '</a>';
} 
else {echo '<a class="modal btn" href="index.php?option=com_users&view=login&templateStyle=29" rel="{handler:'iframe',size:{x:window.getSize().scrollSize.x-80, y: window.getSize().size.y-80}, onShow:$('sbox-window').setStyles({'padding': 0})}">Вход</a>';} 
?>