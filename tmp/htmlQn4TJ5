<?php
$db =& JFactory::getDBO();
$ids = JRequest::getVar('ids', array()); 
$count = 0;
foreach ($ids AS $id) {
$update = "UPDATE gsl_product SET dmowner='-1' WHERE id=" . (int)$id;
$db->setQuery($update);
$db->query();
$count++;
}
$msg = JText::_('Changed viewers to Everybody on ' . (int)$count . ' records.');
$params =& $this->getParams();
$params->set('table_php_msg', $msg);

?>
