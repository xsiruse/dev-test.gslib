<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="general">
		<field name="type" type="hidden" default="rspbld_divider" class="rspbld-input"/>
		<field name="category" type="hidden" default="spacing_elements" class="rspbld-input"/>
	</fieldset>
	<fieldset name="options">
		<field name="divider_type" type="list" default="border" class="rspbld-input" label="COM_RSPAGEBUILDER_DIVIDER_TYPE" description="COM_RSPAGEBUILDER_DIVIDER_TYPE_DESC">
			<option value="border">COM_RSPAGEBUILDER_BORDER</option>
			<option value="image">COM_RSPAGEBUILDER_IMAGE</option>
		</field>
		<field name="border_side" type="list" default="top" class="rspbld-input" label="COM_RSPAGEBUILDER_BORDER_SIDE" description="COM_RSPAGEBUILDER_BORDER_SIDE_DESC">
			<option value="">COM_RSPAGEBUILDER_ALL</option>
			<option value="left">COM_RSPAGEBUILDER_LEFT</option>
			<option value="right">COM_RSPAGEBUILDER_RIGHT</option>
			<option value="top">COM_RSPAGEBUILDER_TOP</option>
			<option value="bottom">COM_RSPAGEBUILDER_BOTTOM</option>
		</field>
		<field name="border_width" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_BORDER_WIDTH" description="COM_RSPAGEBUILDER_BORDER_WIDTH_DESC"/>
		<field name="border_style" type="list" default="solid" class="rspbld-input" label="COM_RSPAGEBUILDER_BORDER_STYLE" description="COM_RSPAGEBUILDER_BORDER_STYLE_DESC">
			<option value="solid">COM_RSPAGEBUILDER_BORDER_STYLE_SOLID</option>
			<option value="dashed">COM_RSPAGEBUILDER_BORDER_STYLE_DASHED</option>
			<option value="dotted">COM_RSPAGEBUILDER_BORDER_STYLE_DOTTED</option>
			<option value="double">COM_RSPAGEBUILDER_BORDER_STYLE_DOUBLE</option>
			<option value="groove">COM_RSPAGEBUILDER_BORDER_STYLE_GROOVE</option>
			<option value="ridge">COM_RSPAGEBUILDER_BORDER_STYLE_RIDGE</option>
			<option value="inset">COM_RSPAGEBUILDER_BORDER_STYLE_INSET</option>
			<option value="outset">COM_RSPAGEBUILDER_BORDER_STYLE_OUTSET</option>
		</field>
		<field name="border_color" type="color" class="rspbld-input color" label="COM_RSPAGEBUILDER_BORDER_COLOR" description="COM_RSPAGEBUILDER_BORDER_COLOR_DESC"/>
		<field name="background_image" type="uploadimage" class="rspbld-input" label="COM_RSPAGEBUILDER_BACKGROUND_IMAGE" description="COM_RSPAGEBUILDER_BACKGROUND_IMAGE_DESC" addfieldpath="administrator/components/com_rspagebuilder/models/fields/"/>
		<field name="background_repeat" type="list" default="no-repeat" class="rspbld-input" label="COM_RSPAGEBUILDER_BACKGROUND_REPEAT" description="COM_RSPAGEBUILDER_BACKGROUND_REPEAT_DESC">
			<option value="no-repeat">COM_RSPAGEBUILDER_BACKGROUND_REPEAT_NO</option>
			<option value="repeat">COM_RSPAGEBUILDER_BACKGROUND_REPEAT_ALL</option>
			<option value="repeat-x">COM_RSPAGEBUILDER_BACKGROUND_REPEAT_HORIZONTAL</option>
			<option value="repeat-y">COM_RSPAGEBUILDER_BACKGROUND_REPEAT_VERTICAL</option>
		</field>
		<field name="background_size" type="list" default="cover" class="rspbld-input" label="COM_RSPAGEBUILDER_BACKGROUND_SIZE" description="COM_RSPAGEBUILDER_BACKGROUND_SIZE_DESC">
			<option value="cover">COM_RSPAGEBUILDER_BACKGROUND_SIZE_COVER</option>
			<option value="contain">COM_RSPAGEBUILDER_BACKGROUND_SIZE_CONTAIN</option>
		</field>
		<field name="background_position" type="list" default="0%-0%" class="rspbld-input" label="COM_RSPAGEBUILDER_BACKGROUND_POSITION" description="COM_RSPAGEBUILDER_BACKGROUND_POSITION_DESC">
			<option value="0%-0%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_LEFT_TOP</option>
			<option value="0%-50%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_LEFT_CENTER</option>
			<option value="0%-100%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_LEFT_BOTTOM</option>
			<option value="50%-0%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_CENTER_TOP</option>
			<option value="50%-50%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_CENTER_CENTER</option>
			<option value="50%-100%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_CENTER_BOTTOM</option>
			<option value="100%-0%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_RIGHT_TOP</option>
			<option value="100%-50%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_RIGHT_CENTER</option>
			<option value="100%-100%">COM_RSPAGEBUILDER_BACKGROUND_POSITION_RIGHT_BOTTOM</option>
		</field>
		<field name="height" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_HEIGHT" description="COM_RSPAGEBUILDER_DIVIDER_DESC"/>
		<field name="margin" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_MARGIN" description="COM_RSPAGEBUILDER_MARGIN_DESC"/>
		<field name="padding" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_PADDING" description="COM_RSPAGEBUILDER_PADDING_DESC"/>
		<field name="class" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_CSS_CLASS" description="COM_RSPAGEBUILDER_CSS_CLASS_DESC"/>
	</fieldset>
</form>