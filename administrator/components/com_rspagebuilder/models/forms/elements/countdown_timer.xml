<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="general">
		<field name="type" type="hidden" default="rspbld_countdown_timer" class="rspbld-input"/>
		<field name="category" type="hidden" default="basic_elements" class="rspbld-input"/>
	</fieldset>
	<fieldset name="options">
		<field name="title" type="text" default="Countdown Timer Title" class="rspbld-input" label="COM_RSPAGEBUILDER_TITLE" description="COM_RSPAGEBUILDER_TITLE_DESC"/>
		<field name="title_show" type="radio" class="rspbld-field btn-group" default="1" label="COM_RSPAGEBUILDER_TITLE_SHOW" description="COM_RSPAGEBUILDER_TITLE_SHOW_DESC">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field name="title_heading" type="list" default="h2" class="rspbld-input" label="COM_RSPAGEBUILDER_TITLE_HEADING" description="COM_RSPAGEBUILDER_TITLE_HEADING_DESC">
			<option value="h1">COM_RSPAGEBUILDER_HEADING_H1</option>
			<option value="h2">COM_RSPAGEBUILDER_HEADING_H2</option>
			<option value="h3">COM_RSPAGEBUILDER_HEADING_H3</option>
			<option value="h4">COM_RSPAGEBUILDER_HEADING_H4</option>
			<option value="h5">COM_RSPAGEBUILDER_HEADING_H5</option>
			<option value="h6">COM_RSPAGEBUILDER_HEADING_H6</option>
		</field>
		<field name="title_font_size" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_TITLE_FONT_SIZE" description="COM_RSPAGEBUILDER_TITLE_FONT_SIZE_DESC"/>
		<field name="title_font_weight" type="list" class="rspbld-input" default="" label="COM_RSPAGEBUILDER_TITLE_FONT_WEIGHT" description="COM_RSPAGEBUILDER_TITLE_FONT_WEIGHT_DESC">
			<option value="">JNONE</option>
			<option value="bold">COM_RSPAGEBUILDER_BOLD</option>
			<option value="normal">COM_RSPAGEBUILDER_NORMAL</option>
		</field>
		<field name="title_text_color" type="color" class="rspbld-input color" label="COM_RSPAGEBUILDER_TITLE_TEXT_COLOR" description="COM_RSPAGEBUILDER_TITLE_TEXT_COLOR_DESC"/>
		<field name="title_margin" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_TITLE_MARGIN" description="COM_RSPAGEBUILDER_TITLE_MARGIN_DESC"/>
		<field name="title_padding" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_TITLE_PADDING" description="COM_RSPAGEBUILDER_TITLE_PADDING_DESC"/>
		<field name="limit" type="calendar" class="rspbld-input" label="COM_RSPAGEBUILDER_LIMIT" description="COM_RSPAGEBUILDER_LIMIT_DESC" translateformat="true" showtime="true" size="22" filter="user_utc"/>
		<field name="format" type="list" class="rspbld-input" default="long" label="COM_RSPAGEBUILDER_FORMAT" description="COM_RSPAGEBUILDER_FORMAT_DESC">
			<option value="long">COM_RSPAGEBUILDER_LONG</option>
			<option value="short">COM_RSPAGEBUILDER_SHORT</option>
		</field>
		<field name="countdown_text_color" type="color" class="rspbld-input color" label="COM_RSPAGEBUILDER_COUNTDOWN_TEXT_COLOR" description="COM_RSPAGEBUILDER_COUNTDOWN_TEXT_COLOR_DESC"/>
		<field name="countdown_font_size" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_COUNTDOWN_FONT_SIZE" description="COM_RSPAGEBUILDER_COUNTDOWN_FONT_SIZE_DESC"/>
		<field name="countdown_font_weight" type="list" class="rspbld-input" default="bold" label="COM_RSPAGEBUILDER_COUNTDOWN_FONT_WEIGHT" description="COM_RSPAGEBUILDER_COUNTDOWN_FONT_WEIGHT_DESC">
			<option value="">JNONE</option>
			<option value="bold">COM_RSPAGEBUILDER_BOLD</option>
			<option value="normal">COM_RSPAGEBUILDER_NORMAL</option>
		</field>
		<field name="details_text_color" type="color" class="rspbld-input color" label="COM_RSPAGEBUILDER_DETAILS_TEXT_COLOR" description="COM_RSPAGEBUILDER_DETAILS_TEXT_COLOR_DESC"/>
		<field name="details_font_size" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_DETAILS_FONT_SIZE" description="COM_RSPAGEBUILDER_DETAILS_FONT_SIZE_DESC"/>
		<field name="details_font_weight" type="list" class="rspbld-input" default="" label="COM_RSPAGEBUILDER_DETAILS_FONT_WEIGHT" description="COM_RSPAGEBUILDER_DETAILS_FONT_WEIGHT_DESC">
			<option value="">JNONE</option>
			<option value="bold">COM_RSPAGEBUILDER_BOLD</option>
			<option value="normal">COM_RSPAGEBUILDER_NORMAL</option>
		</field>
		<field name="background_color" type="color" class="rspbld-input color" label="COM_RSPAGEBUILDER_BACKGROUND_COLOR" description="COM_RSPAGEBUILDER_BACKGROUND_COLOR_DESC"/>
		<field name="border_style" type="list" default="" class="rspbld-input" label="COM_RSPAGEBUILDER_BORDER_STYLE" description="COM_RSPAGEBUILDER_BORDER_STYLE_DESC">
			<option value="">COM_RSPAGEBUILDER_BORDER_STYLE_NONE</option>
			<option value="solid">COM_RSPAGEBUILDER_BORDER_STYLE_SOLID</option>
			<option value="dashed">COM_RSPAGEBUILDER_BORDER_STYLE_DASHED</option>
			<option value="dotted">COM_RSPAGEBUILDER_BORDER_STYLE_DOTTED</option>
			<option value="double">COM_RSPAGEBUILDER_BORDER_STYLE_DOUBLE</option>
			<option value="groove">COM_RSPAGEBUILDER_BORDER_STYLE_GROOVE</option>
			<option value="ridge">COM_RSPAGEBUILDER_BORDER_STYLE_RIDGE</option>
			<option value="inset">COM_RSPAGEBUILDER_BORDER_STYLE_INSET</option>
			<option value="outset">COM_RSPAGEBUILDER_BORDER_STYLE_OUTSET</option>
		</field>
		<field name="border_width" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_BORDER_WIDTH" description="COM_RSPAGEBUILDER_BORDER_WIDTH_DESC"/>
		<field name="border_color" type="color" class="rspbld-input color" label="COM_RSPAGEBUILDER_BORDER_COLOR" description="COM_RSPAGEBUILDER_BORDER_COLOR_DESC"/>
		<field name="border_radius" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_BORDER_RADIUS" description="COM_RSPAGEBUILDER_BORDER_RADIUS_DESC"/>
		<field name="width" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_WIDTH" description="COM_RSPAGEBUILDER_WIDTH_DESC"/>
		<field name="margin" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_MARGIN" description="COM_RSPAGEBUILDER_MARGIN_DESC"/>
		<field name="padding" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_PADDING" description="COM_RSPAGEBUILDER_PADDING_DESC"/>
		<field name="alignment" type="list" default="text-center" class="rspbld-input" label="COM_RSPAGEBUILDER_ALIGNMENT" description="COM_RSPAGEBUILDER_ALIGNMENT_DESC">
			<option value="text-center">COM_RSPAGEBUILDER_CENTER</option>
			<option value="text-left">COM_RSPAGEBUILDER_LEFT</option>
			<option value="text-right">COM_RSPAGEBUILDER_RIGHT</option>
		</field>
		<field name="class" type="text" class="rspbld-input" label="COM_RSPAGEBUILDER_CSS_CLASS" description="COM_RSPAGEBUILDER_CSS_CLASS_DESC"/>
	</fieldset>
</form>