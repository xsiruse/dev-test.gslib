            <!--</fieldset>-->

            <!--<fieldset name="FLICKR">-->
                <!--<field name="flickr_search_from" type="list" default="user" label="FLICKR_SEARCH_FROM_LABEL" description="FLICKR_SEARCH_FROM_DESC">-->
                    <!--<option value="user">User photos</option>-->
